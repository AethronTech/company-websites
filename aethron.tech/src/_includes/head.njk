  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Language and Locale -->
  <meta name="language" content="{{ lang or 'en' }}">
  {% if (lang or 'en') == 'nl' %}
  <meta name="locale" content="nl-NL">
  {% else %}
  <meta name="locale" content="en-US">
  {% endif %}
  
  <!-- Title and SEO -->
  <title>{% if title %}{{ title }}{% else %}{{ (lang or 'en') | t('site.title') }} - {{ (lang or 'en') | t('site.description') }}{% endif %}</title>
  <meta name="description" content="{{ description or ((lang or 'en') | t('site.description')) }}">
  
  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content="{% if title %}{{ title }}{% else %}{{ (lang or 'en') | t('site.title') }}{% endif %}">
  <meta property="og:description" content="{{ description or ((lang or 'en') | t('site.description')) }}">
  <meta property="og:url" content="{{ site.site.url }}{{ page.url }}">
  <meta property="og:type" content="website">
  <meta property="og:site_name" content="{{ (lang or 'en') | t('site.title') }}">
  {% if (lang or 'en') == 'nl' %}
  <meta property="og:locale" content="nl_NL">
  {% else %}
  <meta property="og:locale" content="en_US">
  {% endif %}
  
  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{% if title %}{{ title }}{% else %}{{ (lang or 'en') | t('site.title') }}{% endif %}">
  <meta name="twitter:description" content="{{ description or ((lang or 'en') | t('site.description')) }}">
  
  <!-- Canonical URL -->
  <link rel="canonical" href="{{ site.site.url }}{{ page.url }}">
  
  <!-- Alternate Language Links -->
  {% for language in i18nConfig.languages %}
  {% if language.code != (lang or 'en') %}
  <link rel="alternate" hreflang="{{ language.code }}" href="{{ site.site.url }}/{{ language.code }}{{ page.url | replace('/' + (lang or 'en'), '') }}">
  {% endif %}
  {% endfor %}
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  
  <!-- Stylesheets -->
  <link rel="stylesheet" href="/assets/styles/main.css">
  <link rel="stylesheet" href="/assets/styles/i18n.css">
  <link rel="stylesheet" href="/assets/styles/navigation.css">
  <link rel="stylesheet" href="/assets/styles/about.css">
  <link rel="stylesheet" href="/assets/styles/solutions.css">
  <link rel="stylesheet" href="/assets/styles/contact.css">
  
  <!-- Preload important resources -->
  <link rel="preload" href="/assets/fonts/main-font.woff2" as="font" type="font/woff2" crossorigin>
