  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Title and SEO -->
  <title>{% if title %}{{ title }} | {% endif %}{{ site.site.title }}</title>
  <meta name="description" content="{{ description or site.site.description }}">
  
  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content="{% if title %}{{ title }} | {% endif %}{{ site.site.title }}">
  <meta property="og:description" content="{{ description or site.site.description }}">
  <meta property="og:url" content="{{ site.site.url }}{{ page.url }}">
  <meta property="og:type" content="website">
  <meta property="og:site_name" content="{{ site.site.title }}">
  
  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{% if title %}{{ title }} | {% endif %}{{ site.site.title }}">
  <meta name="twitter:description" content="{{ description or site.site.description }}">
  
  <!-- Canonical URL -->
  <link rel="canonical" href="{{ site.site.url }}{{ page.url }}">
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  
  <!-- Stylesheets -->
  <link rel="stylesheet" href="/assets/styles/main.css">
  
  <!-- Preload important resources -->
  <link rel="preload" href="/assets/fonts/main-font.woff2" as="font" type="font/woff2" crossorigin>
