  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Language and Locale -->
  <meta name="language" content="{{ lang or 'en' }}">
  
  <!-- Title and SEO -->
  <title>{% if title %}{{ title }} | {% endif %}Aethron Technology</title>
  <meta name="description" content="{{ description or 'Leading technology solutions' }}">
  
  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content="{% if title %}{{ title }} | {% endif %}Aethron Technology">
  <meta property="og:description" content="{{ description or 'Leading technology solutions' }}">
  <meta property="og:url" content="{{ site.site.url }}{{ page.url }}">
  <meta property="og:type" content="website">
  <meta property="og:site_name" content="Aethron Technology">
  
  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{% if title %}{{ title }} | {% endif %}Aethron Technology">
  <meta name="twitter:description" content="{{ description or 'Leading technology solutions' }}">
  
  <!-- Canonical URL -->
  <link rel="canonical" href="{{ site.site.url }}{{ page.url }}">
  
  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  
  <!-- Stylesheets -->
  <link rel="stylesheet" href="/assets/styles/main.css">
  <link rel="stylesheet" href="/assets/styles/i18n.css">
  <link rel="stylesheet" href="/assets/styles/navigation.css">
  <link rel="stylesheet" href="/assets/styles/about.css">
  <link rel="stylesheet" href="/assets/styles/solutions.css">
  <link rel="stylesheet" href="/assets/styles/contact.css">
  
  <!-- Preload important resources -->
  <link rel="preload" href="/assets/fonts/main-font.woff2" as="font" type="font/woff2" crossorigin>
