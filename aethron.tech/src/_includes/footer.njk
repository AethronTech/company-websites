<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <!-- Company Info Section -->
      <div class="footer-section footer-brand">
        <div class="footer-logo">
          <img src="/assets/images/logov2.png" alt="{{ 'site.title' | t(lang or 'en') }} logo" class="footer-logo-image">
          <div class="footer-brand-text">
            <h3>{{ 'site.title' | t(lang or 'en') }}</h3>
            <p class="footer-tagline">{{ 'site.tagline' | t(lang or 'en') }}</p>
          </div>
        </div>
        <p class="footer-description">{{ 'site.description' | t(lang or 'en') }}</p>
      </div>

      <!-- Quick Links Section -->
      <div class="footer-section">
        <h4>{{ 'footer.quick_links.title' | t(lang or 'en') }}</h4>
        <ul class="footer-links-list">
          <li><a href="{{ routes.routes[lang or 'en'].home }}">{{ 'navigation.home' | t(lang or 'en') }}</a></li>
          <li><a href="{{ routes.routes[lang or 'en'].about }}">{{ 'navigation.about' | t(lang or 'en') }}</a></li>
          <li><a href="{{ routes.routes[lang or 'en'].solutions }}">{{ 'navigation.solutions' | t(lang or 'en') }}</a></li>
          <li><a href="{{ routes.routes[lang or 'en'].contact }}">{{ 'navigation.contact' | t(lang or 'en') }}</a></li>
        </ul>
      </div>

      <!-- Contact Info Section -->
      <div class="footer-section">
        <h4>{{ 'footer.contact.title' | t(lang or 'en') }}</h4>
        <div class="footer-contact-info">
          <p class="footer-contact-item">
            <span class="contact-icon">📧</span>
            <a href="mailto:info@aethron.tech">info@aethron.tech</a>
          </p>
          <p class="footer-contact-item">
            <span class="contact-icon">📞</span>
            <a href="tel:+32495328558">+32 (0)495 32 85 58</a>
          </p>
          <p class="footer-contact-item">
            <span class="contact-icon">📍</span>
            <span>Oude Pastoriedreef 50, 1745 Opwijk, Belgium</span>
          </p>
          <p class="footer-contact-item">
            <span class="contact-icon">in</span>
            <span><a href="https://www.linkedin.com/company/aethron-technologies" target="_blank" rel="noopener" aria-label="LinkedIn" class="footer-social-link">LinkedIn</a></span>
          </p>
          <p class="footer-contact-item">
            <span class="contact-icon">X</span>
            <span><a href="https://x.com/AethronTech" target="_blank" rel="noopener" aria-label="X (Twitter)" class="footer-social-link">X (Twitter)</a></span>
          </p>
          <p class="footer-contact-item">
            <span class="contact-icon">▶️</span>
            <span><a href="https://www.youtube.com/channel/UCqvRUxxPreU1paYRTyeSmcw" target="_blank" rel="noopener" aria-label="YouTube" class="footer-social-link">YouTube</a></span>
          </p>
        </div>
      </div>

      <!-- Language Switcher Section -->
      <div class="footer-section">
        <h4>{{ 'navigation.language' | t(lang or 'en') }}</h4>
        <div class="footer-language-switcher">
          <a href="{{ page.url | alternateUrl('en') }}" class="footer-lang-link {% if (lang or 'en') == 'en' %}active{% endif %}">
            <span class="lang-flag">🇺🇸</span>
            English
          </a>
          <a href="{{ page.url | alternateUrl('nl') }}" class="footer-lang-link {% if (lang or 'en') == 'nl' %}active{% endif %}">
            <span class="lang-flag">🇳🇱</span>
            Nederlands
          </a>
        </div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-left">
        <p>&copy; 2025 {{ 'site.title' | t(lang or 'en') }}. {{ 'footer.rights' | t(lang or 'en') }}</p>
      </div>
      <div class="footer-bottom-right">
        <nav class="footer-legal-links">
          <a href="{{ 'privacy/' | localizeUrl(lang or 'en') }}">{{ 'footer.privacy' | t(lang or 'en') }}</a>
          <a href="{{ 'terms/' | localizeUrl(lang or 'en') }}">{{ 'footer.terms' | t(lang or 'en') }}</a>
          <a href="/sitemap.xml">{{ 'footer.sitemap' | t(lang or 'en') }}</a>
        </nav>
      </div>
    </div>
  </div>
</footer>
