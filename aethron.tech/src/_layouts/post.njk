---
layout: layout.njk
---

<article class="blog-post">
  <header class="post-header">
    <h1>{{ title }}</h1>
    {% if date %}
    <time datetime="{{ date | dateIso }}">{{ date | dateDisplay }}</time>
    {% endif %}
    {% if tags %}
    <div class="post-tags">
      {% for tag in tags %}
      <span class="tag">{{ tag }}</span>
      {% endfor %}
    </div>
    {% endif %}
  </header>
  
  <div class="post-content">
    {{ content | safe }}
  </div>
  
  <footer class="post-footer">
    <p>Published by {{ site.company.name }}</p>
  </footer>
</article>
