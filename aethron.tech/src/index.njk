<section class="hero">
  <div class="hero-content">
    <h1>{{ (lang | t("homepage.hero.title")) or "Welcome to Aethron Technology" }}</h1>
    <p class="hero-subtitle">Leading Innovation in Technology Solutions</p>
    <p class="hero-description">We are Aethron Technology, delivering cutting-edge solutions.</p>
    <div class="hero-actions">
      <a href="/contact/" class="btn btn-primary">Get Started</a>
      <a href="/about/" class="btn btn-secondary">Learn More</a>
    </div>
  </div>
</section>

<section class="about">
  <div class="container">
    <h2>About Aethron Technology</h2>
    <p>Founded with a vision to revolutionize technology.</p>
    <ul class="values-list">
      <li>Innovation-driven approach</li>
      <li>Client-centric solutions</li>
      <li>Technical excellence</li>
      <li>Sustainable growth</li>
    </ul>
  </div>
</section>

<section class="services">
  <div class="container">
    <h2>Our Services</h2>
    <p class="services-subtitle">Comprehensive Technology Solutions</p>
    <div class="services-grid">
      <div class="service-card">
        <h3>Software Development</h3>
        <p>Custom software solutions tailored to your needs</p>
      </div>
      <div class="service-card">
        <h3>Cloud Solutions</h3>
        <p>Scalable cloud infrastructure and migration services</p>
      </div>
      <div class="service-card">
        <h3>AI & Machine Learning</h3>
        <p>Intelligent systems that learn and adapt</p>
      </div>
      <div class="service-card">
        <h3>Cybersecurity</h3>
        <p>Comprehensive security solutions</p>
      </div>
    </div>
  </div>
</section>

<!-- Language Demo -->
<section class="language-demo">
  <div class="container">
    <h3>Language: {{ lang | langNativeName }}</h3>
    <div class="language-switcher">
      {% for language in i18nConfig.languages %}
      <a href="/{{ language.code }}/" 
         class="lang-link {% if language.code == lang %}active{% endif %}">
        {{ language.nativeName }}
      </a>
      {% endfor %}
    </div>
  </div>
</section>

