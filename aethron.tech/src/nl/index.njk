---
layout: layout.njk
lang: nl
title: "{{ (lang or 'nl') | t('site.title') }} - {{ (lang or 'nl') | t('site.description') }}"
description: "{{ (lang or 'nl') | t('site.description') }}"
---

<section class="hero i18n-content" lang="{{ lang or 'nl' }}">
  <div class="container">
    <div class="hero-content">
      <h1>{{ (lang or 'nl') | t('homepage.hero.title') }}</h1>
      <p class="hero-description">
        {{ (lang or 'nl') | t('homepage.hero.description') }}
      </p>
      <div class="hero-actions">
        <a href="{{ 'solutions/' | localizeUrl(lang or 'nl') }}" class="btn btn-primary">{{ (lang or 'nl') | t('homepage.hero.cta') }}</a>
        <a href="{{ 'about/' | localizeUrl(lang or 'nl') }}" class="btn btn-secondary">{{ (lang or 'nl') | t('homepage.hero.cta_secondary') }}</a>
      </div>
    </div>
  </div>
</section>

<section class="services-overview i18n-content" lang="{{ lang or 'nl' }}">
  <div class="container">
    <div class="services-grid">
      {% for service in (lang or 'nl') | t('homepage.services.items') %}
      <div class="service-card">
        <div class="service-icon">{{ service.icon }}</div>
        <h3>{{ service.title }}</h3>
        <p>{{ service.description }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<section class="about-summary i18n-content" lang="{{ lang or 'nl' }}">
  <div class="container">
    <div class="summary-grid">
      <div class="summary-card">
        <h3>{{ (lang or 'nl') | t('homepage.about_summary.title') }}</h3>
        <p>{{ (lang or 'nl') | t('homepage.about_summary.description') }}</p>
        <a href="{{ (lang or 'nl') | t('homepage.about_summary.link_url') }}" class="btn btn-outline">{{ (lang or 'nl') | t('homepage.about_summary.link_text') }} →</a>
      </div>

      <div class="summary-card">
        <h3>{{ (lang or 'nl') | t('homepage.solutions_summary.title') }}</h3>
        <p>{{ (lang or 'nl') | t('homepage.solutions_summary.description') }}</p>
        <a href="{{ (lang or 'nl') | t('homepage.solutions_summary.link_url') }}" class="btn btn-outline">{{ (lang or 'nl') | t('homepage.solutions_summary.link_text') }} →</a>
      </div>
    </div>
  </div>
</section>
